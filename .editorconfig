# editorconfig.org
root = true

## Pra todos os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
 
## Estilo de identação em arquivos HTML
[*.html]
indent_style = space
indent_size = 4
 
## Estilo de identação em arquivos CSS
[*.css]
indent_style = space
indent_size = 4
 
## Estilo de identação em arquivos JS dentro do diretório Scripts
[scripts/*.js]
indent_style = space
indent_size = 2
